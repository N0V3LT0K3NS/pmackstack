{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "https://pmackstack-production-0f8a.up.railway.app/api/$1" },
    { "src": "^/(.*)", "dest": "/index.html" }
  ]
}
